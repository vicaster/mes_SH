#!/bin/bash

##############################################################################
##								COULEURS	                                ##
##############################################################################

DEFAULT="\033[0m"
HIGHLIGHT="\033[1m"
UNDERLINE="\033[4m"
BLINK="\033[5m"
BLACK="\033[30m"
RED="\033[31m"
GREEN="\033[32m"
YELLOW="\033[33m"
BLUE="\033[34m"
PURPLE="\033[35m"
CYAN="\033[36m"
WHITE="\033[37m"

##############################################################################

clear
project="0"
path=$(pwd)
echo "${YELLOW}
						#############################################################################
						#${RED}   (                             )   )        (              ) (           ${YELLOW}#
						#${RED}   )\ )   (                   ( /(( /(        )\ )     (  ( /( )\ )        ${YELLOW}#
						#${RED}  (()/(   )\    (   (  (      )\())\())    ( (()/(     )\ )\()|()/(  (     ${YELLOW}#
						#${RED}   /(_)|(((_)(  )\  )\ )\    ((_)((_)\     )\ /(_))  (((_|(_)\ /(_)) )\    ${YELLOW}#
						#${RED}  (_))  )\ _ )\((_)((_|(_)  __ ((_)((_) _ ((_|_))    )\___ ((_|_))_ ((_)   ${YELLOW}#
						#${RED}  / __| (_)_\(_) \ / /| __| \ \ / / _ \| | | | _ \  ((/ __/ _ \|   \| __|  ${YELLOW}#
						#${RED}  \__ \  / _ \  \ V / | _|   \ V / (_) | |_| |   /   | (_| (_) | |) | _|   ${YELLOW}#
						#${RED}  |___/ /_/ \_\  \_/  |___|   |_| \___/ \___/|_|_\    \___\___/|___/|___|  ${YELLOW}#
						#                                                                           #
						#############################################################################

${RED}
 ▄▄ █    ▄   ▄███▄   █         █ ▄▄  █▄▄▄▄ ████▄   ▄▄▄▄▄ ▄███▄     ▄▄▄▄▀         ▄   ▄███▄     ▄       ▄         ▄▄▄▄▀ ▄          ▄▄▄▄▄   ██     ▄       ▄   ▄███▄   █▄▄▄▄
█   █     █  █▀   ▀  █         █   █ █  ▄▀ █   █ ▄▀  █   █▀   ▀ ▀▀▀ █             █  █▀   ▀     █  ▀▄   █     ▀▀▀ █     █        █     ▀▄ █ █     █       █  █▀   ▀  █  ▄▀
 ▀▀▀█  █   █ ██▄▄    █         █▀▀▀  █▀▀▌  █   █     █   ██▄▄       █        █     █ ██▄▄    █   █   █ ▀          █  █   █     ▄  ▀▀▀▀▄   █▄▄█ █   █ █     █ ██▄▄    █▀▀▌
    █  █   █ █▄   ▄▀ ███▄      █     █  █  ▀████  ▄ █    █▄   ▄▀   █          █    █ █▄   ▄▀ █   █  ▄ █          █   █   █      ▀▄▄▄▄▀    █  █ █   █  █    █ █▄   ▄▀ █  █
     █ █▄ ▄█ ▀███▀       ▀      █      █           ▀     ▀███▀    ▀            █  █  ▀███▀   █▄ ▄█ █   ▀▄       ▀    █▄ ▄█                   █ █▄ ▄█   █  █  ▀███▀     █
      ▀ ▀▀▀                      ▀    ▀                                         █▐            ▀▀▀   ▀                 ▀▀▀                   █   ▀▀▀     █▐            ▀

                                                                                ▐                                                          ▀            ▐
${YELLOW}"
ls ~/Desktop/101 | grep -v ".c"
echo "${DEFAULT}"
read project

if [ ${project} == "Reloaded" ] || [ ${project} == "Roger-Skyline" ] || [ ${project} == "fillit" ] ||
[ ${project} == "ft_printf" ] || [ ${project} == "get_next_line" ] ||
[ ${project} == "init" ] || [ ${project} == "libft" ];
then
	cd ~/Desktop/101/${project}
	cp -R `ls` ~/Desktop/vicaster/${project}
	echo "${GREEN}~~~~~~~copy done~~~~~~~${DEFAULT}"
	cd ~/Desktop/vicaster
	git add . && git commit -m done && git push
	diff ~/Desktop/101/${project} ~/Desktop/vicaster/${project}
	cd ${path}
fi
